<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.yun.opern.ui.activitys.AboutUsActivity">

    <com.yun.opern.views.ActionBarNormal
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/x300"
        android:layout_height="@dimen/x300"
        android:layout_marginTop="@dimen/x30"
        android:layout_gravity="center"
        android:src="@mipmap/sccnnom_v20161110171_354"
        app:civ_border_width="@dimen/x6"
        app:civ_border_color="@color/white"/>

    <android.support.v7.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginBottom="@dimen/x7"
        app:contentPadding="@dimen/x30"
        app:cardCornerRadius="@dimen/x24">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/aoubt_us"
                android:textColor="@color/black"
                android:textSize="16sp"/>
        </ScrollView>

    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/check_update_btn"
        android:background="@drawable/selector_update_btn"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginTop="@dimen/x7"
        android:layout_marginBottom="@dimen/x7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查更新"
        android:textColor="@color/white"/>


</LinearLayout>
