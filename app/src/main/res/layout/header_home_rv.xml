<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        app:cardCornerRadius="@dimen/x15">

        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x390" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/lastUpdateCardView"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            app:contentPadding="@dimen/x20"
            app:cardCornerRadius="@dimen/x15">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最近更新"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/lastUpdateTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-10-06"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="8sp" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x5"
            app:contentPadding="@dimen/x20"
            app:cardCornerRadius="@dimen/x15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="榜单"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="13sp" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>