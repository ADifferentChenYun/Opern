<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2.5dp"
        android:layout_marginBottom="2.5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        app:contentPadding="10dp"
        app:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_opern_list_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="title 平凡之路"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/item_opern_list_wordAuthor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="4dp"
                android:text="wordAuthor 平凡之路"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_opern_list_songAuthor_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="songAuthor 平凡之路"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/item_opern_list_singer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="singer 平凡之路"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_opern_list_data_origin_tv"
            android:layout_gravity="bottom|end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dataOrigin 平凡之路"
            android:textSize="14sp" />

    </android.support.v7.widget.CardView>


</FrameLayout>

