<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yun.opern.ui.activitys.ShowImageActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/image_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/fab_btns"
        android:layout_gravity="bottom|end"
        android:paddingBottom="@dimen/x60"
        android:layout_marginEnd="@dimen/x60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/download_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x30"
            android:src="@mipmap/ic_download" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/collection_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_collection" />
    </LinearLayout>

    <com.yun.opern.views.ActionBarNormal
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="this is title"/>

</FrameLayout>
